#!/usr/bin/python3
"""Program to read a set of numbers from a file and get the factors"""


def get_factors(read_number):
    """"Function to find 2 numbers that when multiplied will equal
    read_number
    """
    init_factor = 2

    if read_number < 2:
        return

    while read_number % init_factor:
        init_factor += 1
    print("{:.0f}={:.0f}*{:.0f}".
          format(read_number, read_number / init_factor, init_factor))


def read_from_file(file_name):
    try:
        with open(file_name) as file:
            line = file.readline()
            while line != "":
                number = int(line.split('\n')[0])
                get_factors(number)
                line = file.readline()
    except FileNotFoundError:
        pass


if __name__ == "__main__":
    from sys import argv

    if len(argv) != 2:
        exit()
    filename = argv[1]
    read_from_file(filename)
